 #!/bin/bash


while true
	do
         for i in {1..10}; do
                ./revolve.py --experiment-name karines_experiments/data/baseline_$i --run $i --manager experiments/karines_experiments/baseline.py --n-cores 4 --port-start 11000  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
         for i in {11..20}; do
                ./revolve.py --experiment-name karines_experiments/data/baseline_$i --run $i --manager experiments/karines_experiments/baseline.py --n-cores 4 --port-start 11010  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
         for i in {21..30}; do
                ./revolve.py --experiment-name karines_experiments/data/baseline_$i --run $i --manager experiments/karines_experiments/baseline.py --n-cores 4 --port-start 11020  --evaluation-time 50;

                sleep 5s
	   done
done


while true
	do
         for i in {1..10}; do
                 ./revolve.py --experiment-name karines_experiments/data/plastic_$i --run $i --manager experiments/karines_experiments/plastic.py --n-cores 4 --port-start 11030  --evaluation-time 50;

                sleep 5s
	   done
done


while true
	do
         for i in {11..20}; do
                 ./revolve.py --experiment-name karines_experiments/data/plastic_$i --run $i --manager experiments/karines_experiments/plastic.py --n-cores 4 --port-start 11040  --evaluation-time 50;

                sleep 5s
	   done
done


while true
	do
         for i in {21..30}; do
                 ./revolve.py --experiment-name karines_experiments/data/plastic_$i --run $i --manager experiments/karines_experiments/plastic.py --n-cores 4 --port-start 11050  --evaluation-time 50;

                sleep 5s
	   done
done


while true
	do
    sleep 900s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done


